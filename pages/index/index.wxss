.banner{
  width:100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
   width: 100rpx;
   height: 100rpx;
   border-radius: 50%;
   text-align: center;
   line-height:100rpx;
   background: rgb(240,19,19);
   font-size:50rpx;
   color:#fff;
   margin:20rpx 0;
}
.navItem text{
  font-size:24rpx;
}
.recommendContainer {
  padding: 20rpx;
}

.recommendScroll{
  display: flex;
  margin:10rpx 20rpx;
  height: 300rpx;
}
.scrollItem {
  width: 180rpx;
  margin-right: 20rpx;
  height: 200rpx;
}
.scrollItem text{
  font-size: 26rpx;
  overflow: hidden;
  display: -webkit-box;
 -webkit-box-orient: vertical;
 -webkit-line-clamp: 2;
}
.scrollItem .scrollImg{
  width: 180rpx;
  height: 180rpx;
  border-radius:10rpx;
}

.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 400rpx;
}
.swiperItem{
  width: 96%;
  background-color: #fbe;
}
.swiperItem .title{
  font-size:30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
  margin-top: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 25rpx;
}